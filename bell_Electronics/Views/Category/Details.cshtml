    @model bell_Electronics.Models.tbl_Category

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h3 class="text-center"> Details </h3>
    <hr />
    <div class="row justify-content-around">
        <div class="col">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                <h2 class="card-header"> Category Name :</h2>
                <div class="col-md-6 mt-2">
                    <h2>
                        <span class="badge bg-primary">
                            @Html.DisplayFor(model => model.CategoryName, new { @class = "form-control" })
                        </span>
                    </h2>
                </div>
            </div>

            <div class="form-group mt-4">
                <h2 class="card-header"> Status :</h2>
                <div class="col-md-10 mt-2">
                    <h4>
                        <span class="@(Model.Cate_Status==1? "badge rounded-pill bg-success":"badge rounded-pill bg-danger")"> @(Model.Cate_Status == 1 ? "Active" : "Deactive") </span>
                    </h4>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="form-group mt-3">
                <h3>Category Image</h3>
                <img src="@Url.Content(Model.imageURL)" id="img_Category" class="img-thumbnail rounded-2" style="width:450px;height:400px;border-color:blue" />
            </div>
        </div>
    </div>
    <div class="form-group">
        <p style="color:red">@ViewBag.error</p>
    </div>
</div>


<div class="btn-toolbar">
    <div class="btn btn-warning">
        @Html.ActionLink("Edit", "Edit", new { id = Model.CategoryId })
    </div>

    <div class="ms-2">
        <a href="/Category/Index" class="btn btn-primary"> Back to List </a>
      
    </div>
</div>
