@model bell_Electronics.Models.Products
@{
    ViewBag.Title = "Delete";
}

@using (Html.BeginForm("Delete",
                        "Products",
                        FormMethod.Post,
                        new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="card shadow mb-4">
        <div class="card-header py-3 ">
            <h2 class="m-0 font-weight-bold text-primary" style="text-align:center">Products</h2>
        </div>
        <div class="card-body">
            <div class="row justify-content-around">
                <div class="col">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.ProductsID)

                    <div class="form-group">
                        <h3><span class="badge bg-light text-dark ">Products Name </span></h3>
                        <div class="col-md-6 ">
                            <h4>
                                <span class="badge bg-primary">
                                    @Html.DisplayFor(model => model.ProductName, new { @class = "form-control" })
                                </span>
                            </h4>
                        </div>
                    </div>

                    <div class="form-group mt-3">
                        <h3><span class="badge bg-light  text-dark"> Description : </span></h3>
                        <div class="col-md-6 border-1 ">
                            @Html.DisplayFor(x => x.Description, new { @class = "form-control border border-info" })
                        </div>
                    </div>

                    <div class="form-group mt-3">
                        <h3><span class="badge bg-light  text-dark">Price</span></h3>
                        <div class="col-md-6 ">
                            <h4>
                                <span class="badge bg-primary">
                                    ₹ @Html.DisplayFor(model => model.Price, new { @class = "form-control" })
                                </span>
                            </h4>
                        </div>
                    </div>

                    <div class="form-group mt-3">
                        <h2 class="header"> Status :</h2>
                        <div class="col-md-10">
                            <h4>
                                <span class="@(Model.Prod_Status == 1 ? "badge rounded-pill bg-success" : "badge rounded-pill bg-danger")"> @(Model.Prod_Status == 1 ? "Active" : "Out of Stock") </span>
                            </h4>
                        </div>
                    </div>
                    <hr />
                    <div class="form-group mt-lg-5">
                        <input type="submit" value="Delete Products" class="btn btn-danger btn-lg btn-block" />

                    </div>

                </div>

                <div class="col">
                    <div class="form-group mt-3">

                        <h3><span class="badge bg-primary text-dark">Products Image </span></h3>
                        <img src="@Url.Content(Model.PrdimageUrl)" id="img_prod" class="img-thumbnail rounded-2" style="width:450px;height:400px; border-color:chartreuse" />
                        @Html.HiddenFor(model => model.PrdimageUrl)
                    </div>
                </div>
            </div>

        </div>
    </div>

    <div class="form-group mt-lg-4">
        
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
    </div>

    <div class="form-group">
        <p style="color:red">@ViewBag.error</p>
    </div>

}
