@model  bell_Electronics.Models.Order

@{
    ViewBag.Title = "OrderUpdate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("OrderUpdate",
                        "Products",
                        FormMethod.Post,
                        new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()


    <div class="container">
        <div class="card shadow">
            <div class="card-header py-3">
                <h3 class="text-center"> Edit Products</h3>
                <hr />
                <div />
                <div class="card-body" style="background-color:burlywood">
                    <div class="row justify-content-around">
                        <div class="col">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.ProductsId)
                            @Html.HiddenFor(model => model.OrderNo)
                            @Html.HiddenFor(model => model.PaymentId)
                            @Html.HiddenFor(model => model.UserName)

                            <div class="form-group">
                                <h3><span class="badge bg-light text-dark ">Products Name </span></h3>
                                <div class="col-md-6 ">
                                    <h3><span class="badge bg-warning text-dark">@Model.ProductsName </span></h3>
                                </div>
                            </div>

                            <div class="form-group mt-3">
                                <h3><span class="badge bg-light  text-dark"> Description </span></h3>
                                <div class="col-md-6 ">
                                    <h3><span class="badge bg-warning text-dark">@Model.OrderNo </span></h3>
                                </div>
                            </div>

                            <div class="form-group mt-3">
                                <h3><span class="badge bg-light  text-dark">Quantity</span></h3>
                                <div class="col-md-6 ">
                                    <h3><span class="badge bg-warning text-dark">@Model.Quantity </span></h3>
                                </div>
                            </div>

                            <div class="form-group mt-3">
                                <div class="col-md-10">
                                    <label class="form-label">
                                        Status
                                    </label>
                                   
                                    <select class="form-control" id="Status" name="Status">
            <option value="Pending">Pending</option>
            <option value="Dispatch">Dispatch</option>
            <option value="Delivery">Delivery</option>
        </select>
                                </div>
                            </div>

                            <div class="form-group mt-3">
                                <input type="submit" value="Update Status" class="btn btn-primary me-3" />
                                <a href="~//Products/Index" class="btn btn-info"> Back to LIst</a>
                            </div>
                        </div>

                        <div class="col">
                            <div class="form-group mt-3">

                                <h3><span class="badge bg-primary text-dark">Products Image </span></h3>
                                <img src="@Url.Content(Model.PrdimageUrl)" id="img_prod" class="img-thumbnail rounded-2" style="width:450px;height:400px; border-color:chartreuse" />

                            </div>
                        </div>
                    </div>
                </div>



                <div class="form-group">
                    <p style="color:red">@ViewBag.error</p>
                </div>
            </div>
        </div>
    </div>
}