@model IEnumerable<bell_Electronics.Models.Order>
@{
    ViewBag.Title = "OrderDetails";
    Layout = "~/Views/Shared/_LayoutDefault.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h2 class="m-0 font-weight-bold text-primary" style="text-align:center">OrderDetails Lists</h2>
    </div>
    <div class="card-body">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <tr>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.OrderNo)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.ProductsName)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.PrdimageUrl)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.Quantity)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.UserName)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                @*<th class="text-center">
                    @Html.DisplayNameFor(model => model.PaymentId)
                </th>*@
                <th>
                    @Html.DisplayNameFor(model => model.OrderDate)
                </th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-center" width="10%">
                        @Html.DisplayFor(modelItem => item.OrderNo)
                    </td>
                    <td class="text-center" width="20%">
                        @Html.DisplayFor(modelItem => item.ProductsName)
                    </td>
                    <td class="text-center" width="20%">
                        <img src="@Url.Content(item.PrdimageUrl)" style=" height:100px;width:100px ;border-radius:10px 10px 10px 10px" />
                    </td>
                    <td class="text-center" width="10%">
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td class="text-center" width="10%">
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    @*<td class="text-center" width="10%">
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>*@

                    <td class="text-center" width="10%">
                        <span class="@(item.Status=="Pending" ? "badge rounded-pill bg-danger":"badge rounded-pill bg-success")"> @(item.Status) </span>

                        @Html.HiddenFor(modelItem => item.Status)

                    </td>

                    <td class="text-center" width="10%">
                        @Html.DisplayFor(modelItem => item.OrderDate)
                    </td>

                </tr>
            }
        </table>
    </div>
</div>